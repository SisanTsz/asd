;开始调教
@TRAIN
    #DIM COM_NUM
    #DIM COM_NUM_2
    CALL TFLAG_SETTING
    DO
    CALL TIME_CHECK
    CALL SHOW_BODY_STATUS
    CALL TRAIN_BODY_STATUS
    COM_NUM_2 = 1
    FOR COM_NUM, 1, 800
        TRYCALLFORM COM_ABLE{COM_NUM}
        ;检测是否能用
        IF RESULT == 1
            PRINTFORMLC [{COM_NUM_2}] %TRAINNAME:COM_NUM_2%
        ELSE
        ENDIF
        RESULT = 0
        COM_NUM_2 += 1
    NEXT
    PRINTL
    CUSTOMDRAWLINE -
    PRINTFORMLC [901] 能力显示
    PRINTFORMLC [902] 状态显示
    PRINTFORMLC [903] 结束调教
    INPUT
    CALL TRAIN_CHECK(RESULT)
    LOOP 1


