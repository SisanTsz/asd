;FROM eraAkumaMaid

@INPUT_SELECT, ARG, ARG:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, ARG:7, ARG:8, ARG:9, ARG:10
	INPUT
	SELECTCASE RESULT
	CASE IS < 0
		CLEARLINE 1
		RESTART
	CASE 0 TO ARG - 1, ARG:1, ARG:2, ARG:3, ARG:4, ARG:5, ARG:6, ARG:7, ARG:8, ARG:9, ARG:10
		RETURN RESULT
	CASEELSE
		CLEARLINE 1
		RESTART
	ENDSELECT

@DRAWLINES_CENTER, ARG, ARGS
	ALIGNMENT CENTER
	PRINTFORML ---------- [{ARG}] %ARGS% ----------
	ALIGNMENT LEFT
	PRINTL

@TIME_CHECK
	IF FLAG:4 >= 60
		FLAG:4 -= 60
		FLAG:3 += 1
	ENDIF
	IF FLAG:3 >= 24
		FLAG:3 -= 24
		DAY += 1
	ENDIF

@HEADING_1
	PRINTFORML 第{DAY}天 {FLAG:3}时{FLAG:4}分 所在地：{CFLAG}

@HEADING_MASTER
	PRINTFORML %NAME:MASTER% 
	PRINTFORML 体力: {BASE:MASTER:0} / {MAXBASE:MASTER:0} TP: {BASE:MASTER:1} / {MAXBASE:MASTER:1} 精力：{BASE:MASTER:2} / {MAXBASE:MASTER:2}

@HEADING_TARGET, ARG
	IF ARG >= 0
    	PRINTFORML %NAME:ARG%
    	PRINTFORML 体力: {BASE:ARG:0} / {MAXBASE:ARG:0} TP: {BASE:ARG:1} / {MAXBASE:ARG:1} 好感：{BASE:ARG:6} / {MAXBASE:ARG:6}
	ENDIF
